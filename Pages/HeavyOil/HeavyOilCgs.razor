@page "/home/heavyoil/cgs/1"
@using Microsoft.JSInterop
@inject IJSRuntime JS

<!-- Container utama dengan padding untuk memberi jarak dari navbar -->
<div style="padding: 20px 15px; min-height: calc(100vh - 60px); display: flex; flex-direction: column; justify-content: center;">
    
    <!-- Tombol Back -->
    <div style="margin-bottom: 20px;">
        <button onclick="window.location.href='/home/heavyoil'"
                style="padding: 8px 16px; 
                       background-color: #007BFF; 
                       color: white; 
                       border: none; 
                       border-radius: 4px; 
                       cursor: pointer;
                       font-size: 14px;
                       transition: background-color 0.3s;">
            ‚Üê Back
        </button>
    </div>

    <!-- Container untuk diagram dengan positioning yang lebih baik -->
    <div style="flex: 1; 
                display: flex; 
                align-items: center; 
                justify-content: center;
                padding: 10px;">
        <div id="myDiagramDiv" 
             style="width: 100%; 
                    max-width: 1200px;
                    height: 600px; 
                    border: 1px solid #ddd; 
                    border-radius: 8px;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                    background-color: white;">
        </div>
    </div>

</div>

<!-- Popup Informasi -->
<div id="infoPopup" 
     style="display: none; 
            position: fixed; 
            top: 50%; 
            left: 50%; 
            transform: translate(-50%, -50%);
            background: white; 
            border: 1px solid #ccc; 
            border-radius: 8px;
            padding: 24px; 
            z-index: 1000; 
            box-shadow: 0px 4px 20px rgba(0,0,0,0.3);
            min-width: 300px;
            max-width: 500px;">
    <h5 id="popupTitle" style="margin-top: 0; color: #333; font-size: 18px;">Info</h5>
    <p id="popupContent" style="margin: 15px 0; color: #666; line-height: 1.5;">Konten akan muncul di sini</p>
    <button onclick="hidePopup()" 
            style="padding: 8px 16px;
                   background-color: #6c757d;
                   color: white;
                   border: none;
                   border-radius: 4px;
                   cursor: pointer;
                   float: right;
                   transition: background-color 0.3s;">
        Tutup
    </button>
    <div style="clear: both;"></div>
</div>



@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initDiagram");
        }
    }
}