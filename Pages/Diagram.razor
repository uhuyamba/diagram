@page "/diagram"
@using Microsoft.JSInterop
@inject IJSRuntime JS

<div id="myDiagramDiv" style="width:100%; height:600px; border:1px solid gray;"></div>

<!-- Popup Informasi -->
<div id="infoPopup" style="display:none; position:fixed; top:20%; left:35%; background:white; border:1px solid #ccc; padding:20px; z-index:1000; box-shadow: 0px 0px 10px rgba(0,0,0,0.2);">
    <h5 id="popupTitle">Info</h5>
    <p id="popupContent">Konten akan muncul di sini</p>
    <button onclick="hidePopup()">Tutup</button>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initDiagram");
        }
    }
}
